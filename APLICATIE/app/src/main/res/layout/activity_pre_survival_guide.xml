<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitati.PreSurvivalGuideActivity"
    android:background="@drawable/back8">


    <ImageView
        android:id="@+id/imageView2Guide"
        android:layout_width="87dp"
        android:layout_height="61dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewPreGuide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewPreGuide"
        app:layout_constraintTop_toTopOf="@+id/textViewPreGuide"
       />

    <ViewFlipper
        android:id="@+id/v_flipperGuide"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_centerVertical="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPreGuide"
        app:layout_constraintVertical_bias="0.39"
        tools:ignore="MissingConstraints" >

    </ViewFlipper>

    <TextView
        android:id="@+id/textViewPreGuide"
        android:layout_width="187dp"
        android:layout_height="91dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/bungee_inline"
        android:text="Survival Guide"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001" />

    <ImageView
        android:id="@+id/imageView1Guide"
        android:layout_width="87dp"
        android:layout_height="61dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewPreGuide"
        app:layout_constraintEnd_toStartOf="@+id/textViewPreGuide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewPreGuide"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>